<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/screen_background"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shapebutton"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Confirmer Mot de Passe"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shapebutton"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/veuillez_saisir_le_code"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/digit_one_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:singleLine="true"
                    android:ems="3"
                    android:background="@drawable/shapeemail"
                    android:drawablePadding="10dp"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/hint_color" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/digit_two_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:maxLines="1"
                    android:ems="3"
                    android:background="@drawable/shapeemail"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/hint_color" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/digit_three_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/shapeemail"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ems="3"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/hint_color" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/digit_four_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/shapeemail"
                    android:inputType="number"
                    android:maxLines="1"
                    android:ems="3"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/hint_color" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/black"
                    android:checked="true"
                    android:text="Remember Me"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="6dp"
                    android:padding="4dp"
                    android:text="Already have an Account?"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/login_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:text="LogIn"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </LinearLayout>


            <!--        <Button-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginLeft="10dp"-->
            <!--            android:layout_marginTop="0dp"-->
            <!--            android:layout_marginRight="10dp"-->
            <!--            android:layout_marginBottom="10dp"-->
            <!--            android:background="@drawable/shapesignup"-->
            <!--            android:padding="15dp"-->
            <!--            android:shadowColor="@android:color/transparent"-->
            <!--            android:text="@string/sign_up"-->
            <!--            android:textColor="@color/white"-->
            <!--            android:visibility="gone" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="vertical">

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginTop="@dimen/_5sdp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:alpha="0.9"-->
<!--                android:background="@drawable/shapebutton">-->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/verify_code_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue_background"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="Verifier"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />
<!--            </LinearLayout>-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginTop="@dimen/_5sdp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:alpha="0.9"-->
<!--                android:background="@drawable/shapebutton">-->

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="Renvoyer le code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />
<!--            </LinearLayout>-->


        </LinearLayout>
    </RelativeLayout>
</ScrollView>